{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/rglo0002/FIT3179/main/clean_sat_data.csv"
  },
  "transform": [
    {
      "calculate": "year(datum.LaunchDate)",
      "as": "LaunchYear"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Mass",
          "as": "TotalMass"
        }
      ],
      "groupby": ["LaunchYear", "OrbitClass"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "LaunchYear",
      "type": "ordinal",
      "axis": {"title": "Year"}
    },
    "y": {
      "field": "TotalMass",
      "type": "quantitative",
      "axis": {"title": "Total Mass"}
    },
    "color": {
      "field": "OrbitClass",
      "type": "nominal",
      "legend": {"title": "Orbit Class"}
    },
    "tooltip": [
      {"field": "LaunchYear", "type": "ordinal"},
      {"field": "TotalMass", "type": "quantitative"},
      {"field": "OrbitClass", "type": "nominal"}
    ]
  },
  "config": {
    "bar": {
      "stroke": "white"
    }
  }
}