{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Proportion of Satellite Mass by Orbit Class",
    "width": "container",    
    "height": "container",
    "data": {
      "url": "https://raw.githubusercontent.com/rglo0002/FIT3179/main/clean_sat_data.csv"
    },
    "config": {
    "legend": {"labelFont": "monospace", "titleFont": "monospace", "labelColor": "white", "titleColor": "white"},
    "header": {"labelFont": "monospace", "titleFont": "monospace"},
    "title": {"font": "monospace", "subtitleFont": "monospace", "color": "white"},
    "background": "#022338",
    "text": {"fill": "white"},
    "axis": {
      "labelFont": "monospace", 
      "titleFont": "monospace",
      "domainColor": "white",  
      "gridColor": "white",   
      "labelColor": "white",  
      "titleColor": "white"   
    }
    },
    "layer": [
      {
        "params": [
            {
            "name": "orbitFilter",
            "select": {
                "type": "point",  
                "fields": ["OrbitClass"]
            },
            "bind": "legend" 
            }
        ],
        "transform": [
          {
            "calculate": "year(datum.LaunchDate)",
            "as": "LaunchYear"
          },
          {
            "aggregate": [
              {
                "op": "sum",
                "field": "Mass",
                "as": "TotalMass"
              },
              {
                "op": "count",
                "as": "SatelliteCount"
              }
            ],
            "groupby": ["LaunchYear", "OrbitClass"]
          },
          {
            "joinaggregate": [
              {
                "op": "sum",
                "field": "TotalMass",
                "as": "YearTotalMass"
              }
            ],
            "groupby": ["LaunchYear"]
          },
          {
            "filter": "datum.YearTotalMass > 0"
          },
          {
            "calculate": "datum.TotalMass / datum.YearTotalMass",
            "as": "Proportion"
          }
        ],
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "LaunchYear",
            "type": "ordinal",
            "axis": {
              "title": "Year"
            }
          },
          "y": {
            "field": "Proportion",
            "type": "quantitative",
            "axis": {
              "title": "Proportion of Total Mass"
            }
          },
          "color": {
            "field": "OrbitClass",
            "type": "nominal",
            "legend": {
              "title": "Orbit Class",
              "orient": "bottom"
            },
            "scale": {
              "scheme": ["#feebe2", "#fbb4b9", "#f768a1", "#7a0177"]
            },
            "condition": {
                "param": "orbitFilter",  
                "field": "OrbitClass", 
                "type": "nominal"
            }
          },
          "opacity": {
            "value": 0.2,
            "condition": {
                "param": "orbitFilter",  
                "value": 0.8
            }
          },
          "tooltip": [
            {
              "field": "LaunchYear",
              "type": "ordinal",
              "title": "Year Launched"
            },
            {
              "field": "OrbitClass",
              "type": "nominal",
              "title": "Orbit Class"
            },
            {
              "field": "Proportion",
              "type": "quantitative",
              "title": "Proportion",
              "format": ".2%"
            },
            {
              "field": "TotalMass",
              "type": "quantitative",
              "title": "Total Mass (kg):"
            }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "dx": 0,
          "dy": -50,
          "font": "monospace",
          "fontSize": 10,
          "align": "center",
          "fontWeight": "lighter"
        },
        "encoding": {
          "text": {
            "value": [
              "Significant increase in mass launched in 2020.",
              "Primarily due to reusability of Falcon 9 rockets ",
              "and the launch of the Starlink constellation."
            ]
          },
          "color": {
            "value": "white"
          }
        }
      }
    ]
  }
  